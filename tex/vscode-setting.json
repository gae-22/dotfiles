{
    "[latex]": {
            "editor.formatOnSave": true,
            "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.invert": 0,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": true,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latexindent.path": "/opt/homebrew/bin/latexindent",
    "latex-workshop.latexindent.args": [
            "%TMPFILE%",
            "-c=%DIR%/",
            "-y=defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["-r", "/Users/kanegaeryota/dev/latex-template/.latexmkrc", "-cd", "%DOC_EXT%"]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "lualatex",
            "tools": [
                    "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.clean.method": "glob",
    "latex-workshop.latex.clean.fileTypes": [
        "**/__latexindent_temp.tex",
        "**/_markdown_*",
        "**/_minted-*",
        "**/.DS_Store",
        "**/.hg",
        "**/.svn",
        "**/*-blx.bib",
        "**/*.asv",
        "**/*.atfi",
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.dvi",
        "**/*.fdb_latexmk",
        "**/*.fls",
        "**/*.log",
        "**/*.markdown.in",
        "**/*.markdown.lua",
        "**/*.nav",
        "**/*.out",
        "**/*.pyg",
        "**/*.pytxcode",
        "**/*.run.xml",
        "**/*.snm",
        "**/*.stderr",
        "**/*.stdout",
        "**/*.synctex.gz",
        "**/*.texmfcache",
        "**/*.toc",
        "**/CVS",
        "**/pythontex-files-*",
        "**/svg-inkscape-*",
        "**/Thumbs.db",
    ],

    "editor.autoIndent": "full",
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.detectIndentation": false,
    "editor.fontFamily": "HackGenNerdConsole-Regular",
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "errorLens.fontFamily": "HackGenNerdConsole-Regular",
    "errorLens.fontSize": "16",
    "files.autoSave": "onFocusChange",
    "git.openRepositoryInParentFolders": "never",
    "git.autofetch": true,
    "interactiveSession.editor.fontSize": 16,
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.iconTheme": "vscode-great-icons",
    "editor.inlineSuggest.enabled": true,
    "redhat.telemetry.enabled": true,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "workbench.productIconTheme": "macos-modern",
    "editor.defaultFormatter": "GitHub.copilot",
    "prettier.tabWidth": 4,
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "cloudcode.yaml.format.enable": true,
    "editor.defaultFoldingRangeProvider": "GitHub.copilot"
}

